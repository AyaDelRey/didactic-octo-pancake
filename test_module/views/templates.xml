<!-- views/templates.xml -->
<odoo>
  <template id="page_mon_site" name="Page Mon Site" inherit_id="website.layout">
    <xpath expr="//main" position="inside">
      <section>
        <h1>Bienvenue sur mon site !</h1>
        <form action="/contact_submit" method="POST">
          <input type="text" name="nom" placeholder="Votre nom"/>
          <input type="email" name="email" placeholder="Votre email"/>
          <button type="submit">Envoyer SVP</button>
        </form>
      </section>
      <div style="text-align:center; padding: 10px; font-size: 0.9em; color: #777;">
  <i class="fa fa-code"></i> Made by <a href="https://covaltis.com" target="_blank" style="color:#555; text-decoration:none;">Covaltis</a>
</div>
    </xpath>
  </template>
</odoo>
